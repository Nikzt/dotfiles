#! /bin/sh

sxhkd &
#wal -R

bspc monitor -d 1 2 3 4

bspc config border_width         2
bspc config window_gap          20
bspc config top_padding         50
bspc config bottom_padding      30
bspc config left_padding        40
bspc config right_padding       40



BORDERCOLOR=`xrdb -query | grep '*.color3' | awk '{print $NF}'`
BORDERCOLOR_NORMAL=`xrdb -query | grep '*.polybar.icon' | awk '{print $NF}'`
bspc config normal_border_color $BORDERCOLOR_NORMAL
bspc config focused_border_color $BORDERCOLOR
bspc config split_ratio          0.50
bspc config borderless_monocle   false
bspc config gapless_monocle      false
bspc config click_to_focus       true

bspc config external_rules_command ~/.config/bspwm/external_rules
bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a w3m state=floating follow=off
bspc rule -a feh state=floating rectangle=1200x900+320+100
bspc rule -a mpv state=floating follow=off

# bar at top of screen
polybar -r x &
sleep 1

fluxgui &
# set redshift location (shifts screen color to red when sun is down)
sleep .5

# ---window layout on login---

feh --bg-fill ~/Pictures/Wallpapers/bnw-mountains-night.png &
gsettings set org.gnome.desktop.background picture-uri file:///home/bence/Pictures/Wallpapers/bnw-mountains-night.png
# file browser
urxvt -e ranger &
sleep .5
bspc node -p east
bspc node -o 0.58

# process/task manager
urxvt -e htop &
sleep .5
bspc node -p south
bspc node -o 0.13

# Calendar
urxvt -e calcurse &
sleep .5

bspc node -p south

# empty terminal, displays system info on startup
urxvt -e bash -c "neofetch && bash" &

# start music player service
mpd &




