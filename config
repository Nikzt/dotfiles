[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
highlight  = ${xrdb:color1}
grey       = ${xrdb:color3}
value      = ${xrdb:polybar.value}
icon       = ${xrdb:polybar.icon}

[bar/x]
height = 20
width = 100%
border-size = 2
border-color = ${colors.background}
module-margin = 1

modules-left = bspwm mpd
modules-center = 
modules-right = volume battery network time

background = ${colors.background}
foreground = ${colors.foreground}

font-0 =mono:size=09;3
font-1 =siji:size=10;3
tray-position = right
tray-padding = 2
line-size = 1

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

label-song     = "%{B#333333} MUSIC %{B-}%{B#222222} %artist% - %title% %{B-}"
label-offline  = "%{B#333333} OFF   %{B-}%{B#222222} ...      %{B-}"

format-online = <label-song>
format-onffline = <label-offline>

[module/network]
type = internal/network
interface = wlp1s0
interval = 10.0

label-maxlen = 30

label-connected  = " %essid% "
label-disconnected  = " no wifi "

format-connected-prefix = " NET "
format-disconnected-prefix = " NET "

format-connected-prefix-background    = ${colors.icon}
format-disconnected-prefix-background = ${colors.icon}

format-connected-background    = ${colors.value}
format-disconnected-background = ${colors.value}

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 99

label-full        = " %percentage% "
label-charging    = " %percentage% "
label-discharging = " %percentage% "

format-full-prefix        = " BAT "
format-charging-prefix    = " BAT "
format-discharging-prefix = " BAT "

format-full-prefix-background        = ${colors.icon}
format-charging-prefix-background    = ${colors.icon}
format-discharging-prefix-background = ${colors.icon}

format-full-background        = ${colors.value}
format-charging-background    = ${colors.value}
format-discharging-background = ${colors.value}

format-full        = " <label-full>"
format-charging    = " <label-charging>"
format-discharging = " <label-discharging>"

[module/volume]
type = internal/alsa

label-muted  = " %percentage% "
label-volume = " %percentage% "

format-muted-prefix  = " MUTE "
format-volume-prefix = " VOL "

format-muted-prefix-background  = ${colors.icon}
format-volume-prefix-background = ${colors.icon}

format-muted-background  = ${colors.value}
format-volume-background = ${colors.value}

format-muted  = " <label-muted>"
format-volume = " <label-volume>"

[module/time]
type = internal/date
interval = 5

time =  "%H:%M"
time-alt = "%Y-%m-%d"

label = " %time% "
format-background  = ${colors.highlight}
format-foreground  = ${colors.background}

[module/bspwm]
type = internal/bspwm


format = <label-state> <label-mode>

label-active = %name%
label-active-padding = 1
label-active-background = ${colors.icon}


label-occupied = %name%
label-occupied-padding = 1
label-occupied-background = ${colors.value}

label-urgent = %name%
label-urgent-padding = 1

label-empty = %name%
label-empty-padding = 1
label-empty-background = ${colors.value}
